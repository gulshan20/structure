<html>
  <head>
    <title>Form crud</title>
    <style>
       table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid #d5dfaf;
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #cca246;
    }

    </style>
  </head>
  <body>
    <table>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone no</th>
        <th>Edit</th>
      </tr>
      <% for(let i=0;i<users.length;i++){%>
        <tr>
          <input type='hidden' value="<%= users[i].uniqueId %>" name='users[<%= i %>][uniqueId]'>
          <td><%=users[i].fname %></td>
          <td><%=users[i].lname %></td>
          <td><%=users[i].email %></td>
          <td><%=users[i].phone %></td>
          <td>
            <form action="/userdetail">
              <input type="hidden" name="userid" value="<%=users[i].uniqueId%>">
              <input type="submit" value="View">
          </form></td>
        </tr>


      <%}
      %>
    
    </table>
  </body>
</html>
